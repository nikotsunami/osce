<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'
  xmlns:my='urn:import:ch.unibas.medizin.osce.client.style.widgets'
  xmlns:b='urn:import:com.google.gwt.user.cellview.client'
  xmlns:n='urn:import:ch.unibas.medizin.osce.client.a_nonroo.client.ui.role'>

<ui:style src="../../styles.css" >
.noOutline {
		outline-style: none;
		overflow: hidden;	
	}
.padleft5
	{
		padding-left: 5px;
	}
	.standardTable input {
		width: 100%;
		opacity: 0.8;
	}
	
	.icon
	{
		float: left;
		margin: 4px;
	}
	
	.icon:hover {
		cursor: pointer;
	}
	
	.maxWidth {
		margin-bottom: 8px;
		width: 680px;
	}
	.right{
		
		float:right;
	}
	.paddRight{
		float: right;		
	}
	.left{
		float: left;
	}
</ui:style>
 <ui:with type="ch.unibas.medizin.osce.client.style.resources.UiIcons" field="uiIcons" ></ui:with>	

<g:VerticalPanel spacing="10">
<g:HTML>
	<div class="arrow-popup-border" style="left:150px;"></div>
	<div class="arrow-popup" style="left:150px;"></div>
</g:HTML>
	<g:HorizontalPanel  spacing="10">
	
		<g:Label ui:field="topicLbl" styleName="{style.right} " width="63px"></g:Label>
		<g:TextBox ui:field="topicTxtBox" styleName="{style.left}" ></g:TextBox>
		
	</g:HorizontalPanel>
	
	<g:HorizontalPanel  spacing="10">
	
		<g:Label ui:field="descriptionLbl" styleName="{style.right}"></g:Label>
		<g:TextBox ui:field="descriptionTxtBox" styleName="{style.left}" ></g:TextBox>
		
	</g:HorizontalPanel>
	
	<g:HorizontalPanel  spacing="10" horizontalAlignment="center">
		<my:IconButton icon="check" ui:field="okBtn"></my:IconButton>
		<!-- Issue Role -->
		<my:IconButton icon="closethick" ui:field="cancelBtn"></my:IconButton>
		<!-- E: Issue Role -->
	</g:HorizontalPanel>
</g:VerticalPanel>
	

</ui:UiBinder>

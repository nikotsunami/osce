<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit MaterialList</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New MaterialList</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>

    <table class="{style.fields}" id="boundElementHolder">
    
            
            
            
        
            
            
            
            
        
            
            
            
            
        
            
            
            
            
        
            
            
            
        <tr id="name">
                <td>
                    <div class="{style.label}">Name:</div>
                </td>
                <td>
                    <g:TextBox ui:field="name"/>
                </td>
            </tr>
            <tr id="type">
                <td>
                    <div class="{style.label}">Type:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="type"/>
                </td>
            </tr>
            <tr id="price">
                <td>
                    <div class="{style.label}">Price:</div>
                </td>
                <td>
                    <g:IntegerBox ui:field="price"/>
                </td>
            </tr>
            <tr id="priceType">
                <td>
                    <div class="{style.label}">Price Type:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="priceType"/>
                </td>
            </tr>
            <tr id="usedMaterials">
                <td>
                    <div class="{style.label}">Used Materials:</div>
                </td>
                <td>
                    <a:UsedMaterialSetEditor ui:field="usedMaterials"/>
                </td>
            </tr>
        </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>

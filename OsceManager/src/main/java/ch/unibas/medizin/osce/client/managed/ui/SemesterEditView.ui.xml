<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit Semester</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New Semester</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>

    <table class="{style.fields}" id="boundElementHolder">
      
      
      
      
      
    
            
            
            
            
            
            
            
        <tr id="semester">
                <td>
                    <div class="{style.label}">Semester:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="semester"/>
                </td>
            </tr>
            <tr id="calYear">
                <td>
                    <div class="{style.label}">Cal Year:</div>
                </td>
                <td>
                    <g:IntegerBox ui:field="calYear"/>
                </td>
            </tr>
            <tr id="maximalYearEarnings">
                <td>
                    <div class="{style.label}">Maximal Year Earnings:</div>
                </td>
                <td>
                    <g:DoubleBox ui:field="maximalYearEarnings"/>
                </td>
            </tr>
            <tr id="pricestatist">
                <td>
                    <div class="{style.label}">Pricestatist:</div>
                </td>
                <td>
                    <g:DoubleBox ui:field="pricestatist"/>
                </td>
            </tr>
            <tr id="priceStandardizedPartient">
                <td>
                    <div class="{style.label}">Price Standardized Partient:</div>
                </td>
                <td>
                    <g:DoubleBox ui:field="priceStandardizedPartient"/>
                </td>
            </tr>
            <tr id="administrators">
                <td>
                    <div class="{style.label}">Administrators:</div>
                </td>
                <td>
                    <a:AdministratorSetEditor ui:field="administrators"/>
                </td>
            </tr>
            <tr id="osces">
                <td>
                    <div class="{style.label}">Osces:</div>
                </td>
                <td>
                    <a:OsceSetEditor ui:field="osces"/>
                </td>
            </tr>
            <tr id="patientsInSemester">
                <td>
                    <div class="{style.label}">Patients In Semester:</div>
                </td>
                <td>
                    <a:PatientInSemesterSetEditor ui:field="patientsInSemester"/>
                </td>
            </tr>
            <tr id="training">
                <td>
                    <div class="{style.label}">Training:</div>
                </td>
                <td>
                    <a:TrainingSetEditor ui:field="training"/>
                </td>
            </tr>
        </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>

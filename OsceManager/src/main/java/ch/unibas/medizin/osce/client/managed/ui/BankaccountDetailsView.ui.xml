<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
 <ui:style>
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
  <g:HTMLPanel>
    <div class="{style.underline}">
      <h3 class="{style.header}">
                <ui:msg>
                    <span ui:field="displayRenderer"/>
                </ui:msg>
            </h3>
    </div>

    <table class="{style.fields}" id="boundElementHolder">
      
      
      
      
      
    <tr id="id">
                <td>
                    <span class="{style.label}">Id:</span>
                </td>
                <td>
                    <span ui:field="id"/>
                </td>
            </tr>
            <tr id="version">
                <td>
                    <span class="{style.label}">Version:</span>
                </td>
                <td>
                    <span ui:field="version"/>
                </td>
            </tr>
            <tr id="bankName">
                <td>
                    <span class="{style.label}">Bank Name:</span>
                </td>
                <td>
                    <span ui:field="bankName"/>
                </td>
            </tr>
            <tr id="iBAN">
                <td>
                    <span class="{style.label}">I B A N:</span>
                </td>
                <td>
                    <span ui:field="iBAN"/>
                </td>
            </tr>
            <tr id="bIC">
                <td>
                    <span class="{style.label}">B I C:</span>
                </td>
                <td>
                    <span ui:field="bIC"/>
                </td>
            </tr>
            <tr id="ownerName">
                <td>
                    <span class="{style.label}">Owner Name:</span>
                </td>
                <td>
                    <span ui:field="ownerName"/>
                </td>
            </tr>
            <tr id="postalCode">
                <td>
                    <span class="{style.label}">Postal Code:</span>
                </td>
                <td>
                    <span ui:field="postalCode"/>
                </td>
            </tr>
            <tr id="city">
                <td>
                    <span class="{style.label}">City:</span>
                </td>
                <td>
                    <span ui:field="city"/>
                </td>
            </tr>
            <tr id="country">
                <td>
                    <span class="{style.label}">Country:</span>
                </td>
                <td>
                    <span ui:field="country"/>
                </td>
            </tr>
        </table>

  <div class="{style.bar}">
    <g:Button addStyleNames="{style.button}" ui:field="edit">Edit</g:Button>
    <g:Anchor ui:field="delete">Delete</g:Anchor>
   </div>
  </g:HTMLPanel>
</ui:UiBinder>

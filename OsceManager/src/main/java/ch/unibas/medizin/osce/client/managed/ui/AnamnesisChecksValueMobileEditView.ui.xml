<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName="{style.outer}">
    <div class="{style.error}" ui:field="errors"/>
    
    <div id="truth">
            <div class="{style.label}">Truth</div>
            <div class="{style.value}">
                <g:CheckBox ui:field="truth"/>
            </div>
        </div>
    <div id="comment">
            <div class="{style.label}">Comment</div>
            <div class="{style.value}">
                <g:TextBox ui:field="comment"/>
            </div>
        </div>
    <div id="anamnesisChecksValue">
            <div class="{style.label}">Anamnesis Checks Value</div>
            <div class="{style.value}">
                <g:IntegerBox ui:field="anamnesisChecksValue"/>
            </div>
        </div>
    <div id="anamnesisform">
            <div class="{style.label}">Anamnesisform</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="anamnesisform"/>
            </div>
        </div>
    <div id="anamnesischeck">
            <div class="{style.label}">Anamnesischeck</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="anamnesischeck"/>
            </div>
        </div>

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit RoleBaseItem</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New RoleBaseItem</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>

    <table class="{style.fields}" id="boundElementHolder">
      
      
      
      
      
      
    
            
            
            
            
            
            
        <tr id="item_defination">
                <td>
                    <div class="{style.label}">Item_defination:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="item_defination"/>
                </td>
            </tr>
            <tr id="item_name">
                <td>
                    <div class="{style.label}">Item_name:</div>
                </td>
                <td>
                    <g:TextBox ui:field="item_name"/>
                </td>
            </tr>
            <tr id="deleted">
                <td>
                    <div class="{style.label}">Deleted:</div>
                </td>
                <td>
                    <g:CheckBox ui:field="deleted"/>
                </td>
            </tr>
            <tr id="roleTemplate">
                <td>
                    <div class="{style.label}">Role Template:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="roleTemplate"/>
                </td>
            </tr>
            <tr id="sort_order">
                <td>
                    <div class="{style.label}">Sort_order:</div>
                </td>
                <td>
                    <g:IntegerBox ui:field="sort_order"/>
                </td>
            </tr>
            <tr id="roleSubItem">
                <td>
                    <div class="{style.label}">Role Sub Item:</div>
                </td>
                <td>
                    <a:RoleSubItemValueListEditor ui:field="roleSubItem"/>
                </td>
            </tr>
            <tr id="roleTableItem">
                <td>
                    <div class="{style.label}">Role Table Item:</div>
                </td>
                <td>
                    <a:RoleTableItemListEditor ui:field="roleTableItem"/>
                </td>
            </tr>
            <tr id="roleItemAccess">
                <td>
                    <div class="{style.label}">Role Item Access:</div>
                </td>
                <td>
                    <a:RoleItemAccessSetEditor ui:field="roleItemAccess"/>
                </td>
            </tr>
        </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
 <ui:style>
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
  <g:HTMLPanel>
    <div class='{style.underline}'>
      <h3 class='{style.header}'><ui:msg><span ui:field='displayRenderer' /></ui:msg></h3>
    </div>

    <table id='boundElementHolder' class='{style.fields}'>
      <tr id='id'><td><span class='{style.label}'>Id:</span></td><td><span ui:field='id'></span></td></tr>
      <tr id='version'><td><span class='{style.label}'>Version:</span></td><td><span ui:field='version'></span></td></tr>
      <tr id='field'><td><span class='{style.label}'>Field:</span></td><td><span ui:field='field'></span></td></tr>
      <tr id='objectId'><td><span class='{style.label}'>Object Id:</span></td><td><span ui:field='objectId'></span></td></tr>
      <tr id='bindType'><td><span class='{style.label}'>Bind Type:</span></td><td><span ui:field='bindType'></span></td></tr>
      <tr id='comparation'><td><span class='{style.label}'>Comparation:</span></td><td><span ui:field='comparation'></span></td></tr>
      <tr id='value'><td><span class='{style.label}'>Value:</span></td><td><span ui:field='value'></span></td></tr>
      <tr id='shownValue'><td><span class='{style.label}'>Shown Value:</span></td><td><span ui:field='shownValue'></span></td></tr>
      <tr id='standardizedRole'><td><span class='{style.label}'>Standardized Role:</span></td><td><span ui:field='standardizedRole'></span></td></tr>
    </table>

  <div class="{style.bar}">
    <g:Button addStyleNames='{style.button}' ui:field='edit'>Edit</g:Button>
    <g:Anchor ui:field='delete'>Delete</g:Anchor>
   </div>
  </g:HTMLPanel>
</ui:UiBinder>

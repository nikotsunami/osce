<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName="{style.outer}">
    <div class="{style.error}" ui:field="errors"/>
    
    <div id="path">
            <div class="{style.label}">Path</div>
            <div class="{style.value}">
                <g:TextBox ui:field="path"/>
            </div>
        </div>
    <div id="sortOrder">
            <div class="{style.label}">Sort Order</div>
            <div class="{style.value}">
                <g:IntegerBox ui:field="sortOrder"/>
            </div>
        </div>
    <div id="description">
            <div class="{style.label}">Description</div>
            <div class="{style.value}">
                <g:TextBox ui:field="description"/>
            </div>
        </div>
    <div id="standardizedRole">
            <div class="{style.label}">Standardized Role</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="standardizedRole"/>
            </div>
        </div>

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
